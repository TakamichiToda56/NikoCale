extends layout

block content
  h1= title
  p Welcome to #{msg}
  div#content
    form(method='post',action='/')
      table
        tr
          th ユーザーID
          th パスワード
        tr
          td
            input(type='text', name='user_id')
          td
            input(type='text', name='user_pass')
        tr
          td
            input(type="submit" value="ログイン")
    hr
    table(border="1")
      tr
        th.date 更新日時
        th.pict 名前
        th.tweet つぶやき
        - i = 0;
        each d in docs
          tr
            td #{d.tweet[(d.tweet.length-1)].date}
            td 
              div
                img(src="images/#{d.tweet[(d.tweet.length-1)].feeling}.png")
              div 
                form(action="personal", method="post")
                  input(type="submit", value="#{d.name}")
                  input(type="hidden", value="#{d._id}", name="db_id")
            td #{d.tweet[(d.tweet.length-1)].word}
          - i++;
    hr
    div
      form(action="/", method="post")
        input("text", name="name")
        br
        input("text", name="pass")
        br
        input(type="submit" value="Login")
    hr
    div
      form(action="/confirm", method="post")
        input("text", name="new_name")
        br
        input("text", name="new_pass")
        br
        input(type="submit" value="Sign-in")
