extends layout

block content
  h1= msg
  div#content
    - if(docs.length == 0){
      form(method='post',action='/')
        input(type='hidden', name='logout', value="false")
        table
          tr
            th ユーザーID
            th パスワード
          tr
            td
              input(type='text', name='user_id')
            td
              input(type='text', name='user_pass')
          tr
            td
              input(type="submit" value="ログイン")
    - }else{
        form(method='post',action='/')
          input(type='hidden', name='logout', value="true")
          input(type="submit" value="ログアウト")
    - }
    hr
    - if(docs.length != 0){
      form(method='post',action='tweetCheck')
        table
          tr
            td
              img(src="images/happy.png")
            td
              img(src="images/good.png")
            td
              img(src="images/fine.png")
            td
              img(src="images/bad.png")
            td
              img(src="images/sad.png")
          tr
            td
              input(type="radio" name="feeling" value="happy")
            td
              input(type="radio" name="feeling" value="good")
            td
              input(type="radio" name="feeling" value="fine" checked)
            td
              input(type="radio" name="feeling" value="bad")
            td
              input(type="radio" name="feeling" value="sad")
        input(type='hidden', name='id', value="#{id}")
        input(type='text', name="tweet")
        input(type="submit" value="つぶやく")
      hr
      table(border="1")
        tr
          th.date 更新日時
          th.pict 名前
          th.tweet つぶやき
          - i = 0;
          each d in docs
            tr
              td #{d.tweet[(d.tweet.length-1)].date}
              td 
                div
                  img(src="images/#{d.tweet[0].feeling}.png")
                div 
                  form(action="personal", method="post")
                    input(type="submit", value="#{d.name}")
                    input(type="hidden", value="#{d._id}", name="db_id")
              td #{d.tweet[0].word}
            - i++;
    - }else{
      div 新規登録される方はこちら
      br
      div
        form(action="/confirm", method="post")
          table
            tr
              td 新規ユーザーID
              td
                input("text", name="new_id")
            tr
              td 新規ユーザーパスワード
              td
                input("text", name="new_pass")
            tr
              td 表示名
              td 
                input("text", name="new_name")
          input(type="submit" value="Sign-in")
    - }
