extends layout

block content
  h1 Confirm Page
  p Please check your information.
  div#content
    div よろしいですか？(※今のところ一度登録したら変更できません)
    table(border="1")
      tr
        th ユーザーID
        th 表示名
      tr
        td #{id}
        td #{name}
    div
      form(action="addUser", method="post")
        input(type="hidden", value="#{id}", name="new_id")
        input(type="hidden", value="#{name}", name="new_name")
        input(type="submit" value="OK")
      form(action="/", method="get")
        input(type="submit" value="Cancel")
